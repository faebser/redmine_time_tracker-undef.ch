<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema id="org.gnome.shell.extensions.undef-time-tracker" path="/org/gnome/shell/extensions/undef-time-tracker/">
        <key name="host" type="s">
            <default>"<![CDATA[http://example.com]]>"</default>
            <summary>Host</summary>
            <description>URL pointing to your redmine installation</description>
        </key>
        <key name="key" type="s">
            <default>""</default>
            <summary>API Key</summary>
            <description>Database name</description>
        </key>
        <key name="filter-assigned-to-me" type="b">
            <default>false</default>
            <summary>Show only my issues</summary>
            <description>Filter issues to show only those assigned to you</description>
        </key>

        <key name="place-center" type="b">
            <default>false</default>
            <summary>Place in Center</summary>
            <description>Place extension in center of status area</description>
        </key>

        <key name="save-interval" type="i">
            <default>300</default>
            <summary>Save Interval</summary>
            <description>Time in seconds</description>
        </key>

        <key name="notify-interval" type="i">
            <default>600</default>
            <summary>Notifications Interval</summary>
            <description>Time in seconds</description>
        </key>

        <key name="show-project-name-in-status" type="b">
            <default>false</default>
            <summary>show active project instead of issue</summary>
            <description>Show the project name and not the current Issue in the status area</description>
        </key>

    </schema>
</schemalist>